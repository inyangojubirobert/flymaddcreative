{
  "version": 2,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "installCommand": "echo 'No dependencies to install'",
  "framework": null,
  "public": true,
  "trailingSlash": false,
  "cleanUrls": true,

  "rewrites": [
    { "source": "/", "destination": "/websiteapp.html" },
    { "source": "/app", "destination": "/websiteapp.html" },
    { "source": "/websiteapp", "destination": "/websiteapp.html" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://flymaddcreative.vercel.app https://www.flymaddcreative.online"
        },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
