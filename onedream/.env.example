# Environment Variables for One Dream Initiative
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# One Dream Initiative Configuration
VOTE_VALUE=2
GOAL_VOTES=1000000
ALLOW_FREE_VISITS_AS_VOTE=false

# Security
ADMIN_SECRET=your_super_secret_admin_password
PAYMENT_SECRET=your_webhook_secret_for_payment_providers
JWT_SECRET=your_jwt_secret_for_sessions

# Payment Providers (Optional - for production)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret

# Development
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000